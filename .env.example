# .env.example
# کپی این فایل با نام `.env` و پر کردن مقادیر واقعی

# پروژه
PROJECT_NAME=NOWEX Trading Platform
PROJECT_VERSION=1.0.0

# پایگاه داده PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nowex_development
POSTGRES_USER=nowex_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# کش Redis
REDIS_URL=redis://localhost:6379

# امنیت - JWT
SECRET_KEY=your_super_secret_jwt_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Frontend URL برای CORS
FRONTEND_URL=http://localhost:3000